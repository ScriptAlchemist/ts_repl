{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext", // Required for PnP
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "types": ["node"],
    "typeRoots": ["./.yarn/__virtual__/*", "./.yarn/cache/*"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
